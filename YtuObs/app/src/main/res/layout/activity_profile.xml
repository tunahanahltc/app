<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF8FD"
    android:orientation="vertical"
    tools:context=".Profile">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintBottom_toBottomOf="parent"

       app:layout_constraintTop_toTopOf="parent">


      <ImageButton
          android:id="@+id/menu_button_profile"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:backgroundTint="#EFF8FD"
          android:scaleType="fitCenter"
          app:srcCompat="@drawable/menu_561184" />

      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="378dp"
          android:layout_height="304dp"
          android:layout_gravity="center"
          app:layout_constraintEnd_toEndOf="parent"
          android:visibility="visible"
          app:layout_constraintTop_toTopOf="@+id/linearLayout2"
          android:background="@drawable/user_1177568" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="vertical">

         <TextView
             android:id="@+id/statu"
             android:layout_width="100dp"
             android:layout_height="29dp"
             android:text="Statu :"
             android:textStyle="bold|italic"
             app:layout_constraintBottom_toTopOf="@+id/textView8"
             app:layout_constraintStart_toStartOf="parent" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="horizontal">

         <TextView
             android:id="@+id/textView8"
             android:layout_width="100dp"
             android:layout_height="29dp"
             android:text="İsim :"
             android:textStyle="bold|italic"
             app:layout_constraintBottom_toTopOf="@+id/textView8"
             app:layout_constraintStart_toStartOf="parent" />

         <EditText
             android:id="@+id/profile_name"
             android:layout_width="296dp"
             android:layout_height="wrap_content"

             android:enabled="false"
             android:textCursorDrawable="@null"
             app:layout_constraintBottom_toTopOf="@+id/profile_mail"
             app:layout_constraintStart_toStartOf="parent" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="horizontal">

         <TextView
             android:id="@+id/textView9"
             android:layout_width="100dp"
             android:layout_height="29dp"
             android:text="Mail:"
             android:textStyle="bold|italic"
             app:layout_constraintBottom_toTopOf="@+id/textView8"
             app:layout_constraintStart_toStartOf="parent" />

         <EditText
             android:id="@+id/profile_mail"
             android:layout_width="296dp"
             android:layout_height="wrap_content"

             android:enabled="false"
             android:textCursorDrawable="@null"
             app:layout_constraintBottom_toTopOf="@+id/profile_mail"
             app:layout_constraintStart_toStartOf="parent" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="horizontal">

         <TextView
             android:id="@+id/textView7"
             android:layout_width="100dp"
             android:layout_height="29dp"
             android:text="Öğrenci No :"
             android:textStyle="bold|italic"
             app:layout_constraintBottom_toTopOf="@+id/textView8"
             app:layout_constraintStart_toStartOf="parent" />

         <EditText
             android:id="@+id/profile_studentId"
             android:layout_width="296dp"
             android:layout_height="wrap_content"

             android:enabled="false"
             android:textCursorDrawable="@null"
             app:layout_constraintBottom_toTopOf="@+id/profile_mail"
             app:layout_constraintStart_toStartOf="parent" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="horizontal">

         <TextView
             android:id="@+id/textView10"
             android:layout_width="100dp"
             android:layout_height="29dp"
             android:text="Eğitim :"
             android:textStyle="bold|italic"
             app:layout_constraintBottom_toTopOf="@+id/textView8"
             app:layout_constraintStart_toStartOf="parent" />

         <EditText
             android:id="@+id/profile_educate"
             android:layout_width="296dp"
             android:layout_height="wrap_content"

             android:enabled="false"
             android:textCursorDrawable="@null"
             app:layout_constraintBottom_toTopOf="@+id/profile_mail"
             app:layout_constraintStart_toStartOf="parent" />


      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:orientation="horizontal">

         <TextView
             android:id="@+id/textView11"
             android:layout_width="100dp"
             android:layout_height="29dp"
             android:text="Tel No :"
             android:textStyle="bold|italic"
             app:layout_constraintBottom_toTopOf="@+id/textView8"
             app:layout_constraintStart_toStartOf="parent" />

         <EditText
             android:id="@+id/profile_phone"
             android:layout_width="296dp"
             android:layout_height="wrap_content"

             android:enabled="false"
             android:textCursorDrawable="@null" />


      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginLeft="5dp"
          android:orientation="horizontal">

         <Button
             android:id="@+id/editButton"
             android:layout_width="111dp"
             android:layout_height="60dp"
             android:layout_marginEnd="28dp"
             android:layout_marginBottom="28dp"
             android:layout_marginTop="10dp"

             android:background="@drawable/button_round_style"
             android:text="Düzenle"
             android:visibility="visible"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent" />


      </LinearLayout>

   </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
