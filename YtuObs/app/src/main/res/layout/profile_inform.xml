<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-172dp"
        tools:layout_editor_absoluteY="121dp">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu_561184"
            tools:srcCompat="@drawable/menu_561184" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="378dp"
        android:layout_height="304dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@drawable/user_1177568" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="65dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:text="İsim :"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_mail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="24dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_studentId"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="120dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="63dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:text="Öğrenci \nNo : "
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="62dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:text="Eğitim :"
        android:textStyle="bold|italic"

        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_educate"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="12dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_phone"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_studentId"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="16dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_educate"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/profile_name"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="12dp"
        android:enabled="false"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toTopOf="@+id/profile_mail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="62dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="124dp"
        android:text="Tel no: "
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="48dp"
        android:text="E-Mail :"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/statu"
        android:layout_width="109dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:text="Statü :"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="97dp"
        android:layout_height="45dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="Kaydet"
        android:background="@drawable/button_round_style"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:text="Düzenle"
        android:background="@drawable/button_round_style"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/cameraButton"
        android:layout_width="51dp"
        android:layout_height="48dp"

        android:background="@null"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="282dp"
        tools:layout_editor_absoluteY="101dp" />




</androidx.constraintlayout.widget.ConstraintLayout>